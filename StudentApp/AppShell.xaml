<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudentApp"
    xmlns:views="clr-namespace:StudentApp.Views"
    Title="StudentApp">

    <!-- Bottom Tab Bar Navigation -->
    <TabBar>
        <Tab Title="Project" Icon="dotnet_bot.png"> <!-- TODO: Replace with appropriate icon -->
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        
        <Tab Title="Tasks" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:TasksPage}" Route="TasksPage" />
        </Tab>
        
        <Tab Title="Messages" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:MessagesPage}" Route="MessagesPage" />
        </Tab>

        <Tab Title="Profile" Icon="dotnet_bot.png">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" Route="ProfilePage" />
        </Tab>
    </TabBar>

</Shell>
