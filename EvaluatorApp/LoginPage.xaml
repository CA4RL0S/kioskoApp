<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluatorApp.LoginPage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.TabBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Never">
        <Grid VerticalOptions="Center" Padding="20" Margin="0,20,0,20">
            <!-- Main Card -->
            <Border StrokeShape="RoundRectangle 12"
                    StrokeThickness="0"
                    BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource CardDark}}"
                    MaximumWidthRequest="480"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                <Border.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,4"
                            Radius="10"
                            Opacity="0.1" />
                </Border.Shadow>

                <VerticalStackLayout Spacing="0">
                    <!-- Header Image Section -->
                    <Grid HeightRequest="220" IsClippedToBounds="True">
                        <Image Source="https://lh3.googleusercontent.com/aida-public/AB6AXuCJAC2fSouUBt_BJoqLdbrWhRYJVZt_KOJuF44TgpMVJv_GZQeeX5K_blljmNYS4QDlrp33vzAeOtHSx36B7mvl_ESMPVee_Dh2vZh3jgXLs8-ApF6pJqfQBj5j1s4VrTVhguDHHwfifvkx4rq2qdNVm9Gq_0vVBxurFVagNfqoSXeCWKTUvV8KjwiH6TniSOGPxV3Awn7ertUiBtpkfvI5dewEETrY0VDQ34rXeGT35tAj4nIt5mA7jloungcwEJZP7cZAAMOaUFQ"
                               Aspect="AspectFill"
                               HorizontalOptions="Fill"
                               VerticalOptions="Fill"/>
                        
                        <!-- Overlay Gradient (Simulated with semi-transparent box) -->
                        <BoxView Color="#66000000" VerticalOptions="End" HeightRequest="100" />

                        <!-- Badge -->
                        <Border BackgroundColor="#33FFFFFF"
                                Stroke="#4DFFFFFF"
                                StrokeShape="RoundRectangle 16"
                                HorizontalOptions="Start"
                                VerticalOptions="End"
                                Margin="16"
                                Padding="12,4">
                            <Label Text="Plataforma Académica"
                                   FontSize="12"
                                   TextColor="White"
                                   FontAttributes="Bold"/>
                        </Border>
                    </Grid>

                    <!-- Content Section -->
                    <VerticalStackLayout Padding="24" Spacing="20">
                        <!-- Headline -->
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="Evaluación de Proyectos"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark=White}"/>
                            <Label Text="Ingresa tus credenciales institucionales"
                                   FontSize="16"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource Gray300}}"/>
                        </VerticalStackLayout>

                        <!-- Form -->
                        <VerticalStackLayout Spacing="16">
                            <!-- Email -->
                            <VerticalStackLayout Spacing="8">
                                <Label Text="Correo Institucional"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource Gray200}}"/>
                                <Border Stroke="{AppThemeBinding Light={StaticResource InputBorder}, Dark={StaticResource InputBorderDark}}"
                                        StrokeShape="RoundRectangle 8"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource InputBackgroundDark}}"
                                        Padding="15,0">
                                    <Entry x:Name="EmailEntry"
                                           Placeholder="usuario@institucion.edu.co"
                                           HeightRequest="50"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark=White}"
                                           PlaceholderColor="{StaticResource TextSecondary}"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Password -->
                            <VerticalStackLayout Spacing="8">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="Contraseña"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource Gray200}}"/>
                                </Grid>
                                <Border Stroke="{AppThemeBinding Light={StaticResource InputBorder}, Dark={StaticResource InputBorderDark}}"
                                        StrokeShape="RoundRectangle 8"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource InputBackgroundDark}}"
                                        Padding="15,0">
                                    <Entry x:Name="PasswordEntry"
                                           Placeholder="••••••••"
                                           IsPassword="True"
                                           HeightRequest="50"
                                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark=White}"
                                           PlaceholderColor="{StaticResource TextSecondary}"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Forgot Password -->
                            <Label Text="¿Olvidaste tu contraseña?"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End"
                                   TextDecorations="Underline"/>

                            <!-- Login Button -->
                            <Button Text="Iniciar Sesión"
                                    x:Name="LoginBtn"
                                    Clicked="OnLoginClicked"
                                    BackgroundColor="{StaticResource Primary}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    CornerRadius="8"
                                    HeightRequest="56"
                                    Margin="0,8,0,0"/>
                        </VerticalStackLayout>

                        <!-- Footer -->
                        <VerticalStackLayout Spacing="10" Margin="0,10,0,0" HorizontalOptions="Center">
                            <Label Text="¿Tienes problemas? Contactar Soporte" 
                                   FontSize="14"
                                   TextColor="{StaticResource TextSecondary}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="¿Tienes problemas? " />
                                        <Span Text="Contactar Soporte" TextColor="{StaticResource Primary}" FontAttributes="Bold" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            
                            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center" Opacity="0.5">
                                <BoxView Color="{StaticResource TextSecondary}" HeightRequest="4" WidthRequest="4" CornerRadius="2" VerticalOptions="Center"/>
                                <Label Text="Versión 2.4.0" FontSize="12" TextColor="{StaticResource TextSecondary}"/>
                                <BoxView Color="{StaticResource TextSecondary}" HeightRequest="4" WidthRequest="4" CornerRadius="2" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>
