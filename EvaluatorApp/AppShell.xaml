<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EvaluatorApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EvaluatorApp"
    Title="EvaluatorApp">

    <ShellContent
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"
        Shell.FlyoutBehavior="Disabled"
        Shell.NavBarIsVisible="False" />

    <TabBar>
        <ShellContent
            Title="Inicio"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage">
            <ShellContent.Icon>
                <FontImageSource FontFamily="MaterialIcons" Glyph="home" Size="24" />
            </ShellContent.Icon>
        </ShellContent>
        
        <ShellContent
            Title="Proyectos"
            ContentTemplate="{DataTemplate local:ProjectsPage}"
            Route="ProjectsPage">
            <ShellContent.Icon>
                <FontImageSource FontFamily="MaterialIcons" Glyph="assignment" Size="24" />
            </ShellContent.Icon>
        </ShellContent>
            
        <ShellContent
            Title="Ranking"
            ContentTemplate="{DataTemplate local:RankingPage}"
            Route="RankingPage">
            <ShellContent.Icon>
                <FontImageSource FontFamily="MaterialIcons" Glyph="leaderboard" Size="24" />
            </ShellContent.Icon>
        </ShellContent>
            
        <ShellContent
            Title="Perfil"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage">
            <ShellContent.Icon>
                <FontImageSource FontFamily="MaterialIcons" Glyph="person" Size="24" />
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>
</Shell>
