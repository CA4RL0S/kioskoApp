<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluatorApp.EvaluationResultPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
             Title="Confirmación"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Sticky Header with Close Button -->
        <Grid RowDefinitions="Auto, *, Auto" VerticalOptions="Fill">
            <Grid Grid.Row="0" ColumnDefinitions="Auto, *, Auto" Padding="16,16,16,0" BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource BackgroundDark}}">
                <ImageButton Source="close.png" HeightRequest="24" WidthRequest="24" Clicked="OnCloseClicked" HorizontalOptions="Start">
                    <ImageButton.Source>
                         <FontImageSource FontFamily="MaterialIcons" Glyph="close" Color="{AppThemeBinding Light={StaticResource TextPrimary}, Dark=White}" Size="24"/>
                    </ImageButton.Source>
                </ImageButton>
                <Label Grid.Column="1" Text="Confirmación" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark=White}"/>
                <BoxView Grid.Column="2" WidthRequest="24" Color="Transparent"/> <!-- Spacer for centering -->
            </Grid>

            <!-- Scrollable Content -->
            <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">
                <VerticalStackLayout Padding="0,0,0,100">
                     <!-- Success Icon -->
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="24" Padding="0,32">
                        <Border StrokeThickness="0" BackgroundColor="#3313EC13" HeightRequest="96" WidthRequest="96" StrokeShape="RoundRectangle 48">
                            <Label Text="check_circle" FontFamily="MaterialIcons" FontSize="64" TextColor="{StaticResource Primary}" HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <Label Text="Evaluación Enviada con Éxito" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark=White}"/>
                            <Label Text="¡Buen trabajo! Tu evaluación ha sido registrada correctamente y ya forma parte del promedio del proyecto."
                                   FontSize="16" HorizontalOptions="Center" HorizontalTextAlignment="Center" TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSubDark}}" Padding="32,0"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>

                    <!-- Summary Card -->
                    <VerticalStackLayout Padding="16">
                        <Border Stroke="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}" StrokeThickness="1" BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource SurfaceDark}}" StrokeShape="RoundRectangle 12">
                            <Border.Shadow>
                                <Shadow Brush="Black" Offset="0,4" Radius="12" Opacity="0.05"/>
                            </Border.Shadow>
                            <VerticalStackLayout Spacing="0">
                                <Image x:Name="ProjectImage" Aspect="AspectFill" HeightRequest="200" BackgroundColor="#eee"/>
                                <VerticalStackLayout Padding="20">
                                    <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,4">
                                        <Label Text="Calificación Total" Grid.Column="0" FontSize="18" FontAttributes="Bold" TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark=White}"/>
                                        <Border Grid.Column="1" BackgroundColor="#3313EC13" StrokeThickness="0" StrokeShape="RoundRectangle 4" Padding="8,4">
                                            <Label x:Name="TotalScoreLabel" Text="0/70" TextColor="{StaticResource Primary}" FontSize="14" FontAttributes="Bold"/>
                                        </Border>
                                    </Grid>
                                    <Label x:Name="ProjectTitleLabel" Text="Proyecto Integrador" FontSize="14" FontAttributes="None" TextColor="#618961" Margin="0,0,0,12"/>
                                    
                                    <BoxView HeightRequest="1" Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}" Margin="0,0,0,12"/>

                                    <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                                        <Label Text="Puntaje Final" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                                        <Label x:Name="TotalScoreSubLabel" Text="0" FontSize="32" FontAttributes="Bold" TextColor="{StaticResource Primary}" HorizontalOptions="Center"/>
                                        <Label Text="de 70 puntos posibles" FontSize="12" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </ScrollView>

             <!-- Footer Buttons -->
            <VerticalStackLayout Grid.Row="2" Spacing="12" Padding="16,16,16,32" BackgroundColor="{AppThemeBinding Light=#CCFFFFFF, Dark=#CC101622}">
                <Button Text="Ver Ranking Actualizado" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        TextColor="White" 
                        BackgroundColor="{StaticResource Primary}" 
                        CornerRadius="12" 
                        HeightRequest="56"
                        Clicked="OnRankingClicked">
                    <Button.ImageSource>
                         <FontImageSource FontFamily="MaterialIcons" Glyph="leaderboard" Color="White" Size="20"/>
                    </Button.ImageSource>
                </Button>

                <Button Text="Volver a Proyectos" 
                        FontSize="16" 
                        FontAttributes="Bold" 
                        TextColor="{StaticResource Primary}" 
                        BackgroundColor="Transparent" 
                        BorderColor="{StaticResource Primary}"
                        BorderWidth="1"
                        CornerRadius="12" 
                        HeightRequest="56"
                        Clicked="OnProjectsClicked">
                     <Button.ImageSource>
                         <FontImageSource FontFamily="MaterialIcons" Glyph="grid_view" Color="{StaticResource Primary}" Size="20"/>
                    </Button.ImageSource>
                </Button>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
